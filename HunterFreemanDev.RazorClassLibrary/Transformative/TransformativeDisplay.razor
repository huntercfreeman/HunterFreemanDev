@using Fluxor.Blazor.Web.Components

@inherits FluxorComponent

<div>
    @@DragState.DeltaX: @DragState.Value.DeltaX 
</div>

<div>
    @@DragState.DeltaY: @DragState.Value.DeltaY 
</div>

<div>
    @@DragState.MouseEventArgs.ClientX: @(DragState.Value.MouseEventArgs?.ClientX.ToString() ?? "null")
</div>

<div>
    @@DragState.MouseEventArgs.ClientY: @(DragState.Value.MouseEventArgs?.ClientY.ToString() ?? "null")
</div>

<div>
    @@_resizeEventCounter: @_resizeEventCounter
</div>

@* Cardinal Resize Handles *@
<div class="hfd_transformative-resize-handle-display hfd_transformative-resize-handle-north-display"
     style="@GetNorthResizeHandleCssStyling()"
     @onmousedown="SubscribeToDragEventWithNorthResizeHandle">

</div>

<div class="hfd_transformative-resize-handle-display hfd_transformative-resize-handle-east-display"
     style="@GetEastResizeHandleCssStyling()"
     @onmousedown="SubscribeToDragEventWithEastResizeHandle">

</div>

<div class="hfd_transformative-resize-handle-display hfd_transformative-resize-handle-south-display"
     style="@GetSouthResizeHandleCssStyling()"
     @onmousedown="SubscribeToDragEventWithSouthResizeHandle">

</div>

<div class="hfd_transformative-resize-handle-display hfd_transformative-resize-handle-west-display"
     style="@GetWestResizeHandleCssStyling()"
     @onmousedown="SubscribeToDragEventWithWestResizeHandle">

</div>

@* Diagonal Resize Handles *@
<div class="hfd_transformative-resize-handle-display hfd_transformative-resize-handle-north-east-display"
     style="@GetNorthEastResizeHandleCssStyling()"
     @onmousedown="SubscribeToDragEventWithNorthEastResizeHandle">

</div>

<div class="hfd_transformative-resize-handle-display hfd_transformative-resize-handle-south-east-display"
     style="@GetSouthEastResizeHandleCssStyling()"
     @onmousedown="SubscribeToDragEventWithSouthEastResizeHandle">

</div>

<div class="hfd_transformative-resize-handle-display hfd_transformative-resize-handle-south-west-display"
     style="@GetSouthWestResizeHandleCssStyling()"
     @onmousedown="SubscribeToDragEventWithSouthWestResizeHandle">

</div>

<div class="hfd_transformative-resize-handle-display hfd_transformative-resize-handle-north-west-display"
     style="@GetNorthWestResizeHandleCssStyling()"
     @onmousedown="SubscribeToDragEventWithNorthWestResizeHandle">

</div>