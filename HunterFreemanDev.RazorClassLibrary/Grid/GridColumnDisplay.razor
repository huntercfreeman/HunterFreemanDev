@using HunterFreemanDev.ClassLibrary.Element

<div class="hfd_grid-column-display"
     style="@GetStyle">
     GridColumnIndex: @GridColumnIndex

    <GridAddColumnButtons AddWindowEventCallback="OnAddWindowEventCallback" />

    @if (GridRecord.RenderedContentType != typeof(UninitializedElementRecord))
    {
        <DynamicComponent Type="GridRecord.RenderedContentType"
                          Parameters="GetDynamicComponentParameters()"/>
    }
    else
    {
        <GridUninitializedElementRecordDisplay ElementRecord="GridRecord" />
    }
</div>